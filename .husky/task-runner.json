{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "dotnet-format-staged-files",
         "group": "pre-commit-operations",
         "command": "dotnet",
         "args": [
            "format",
            "--include",
            "${staged}"
         ],
         "include": [
            "**/*.cs"
         ]
      },
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": [
            "husky",
            "exec",
            ".husky/csx/commit-lint.csx",
            "--args",
            "${args}"
         ]
      },
      {
         "name": "build-solution",
         "command": "dotnet",
         "args": [
            "build",
            "--verbosity",
            "q"
         ]
      },
      {
         "name": "run-tests",
         "command": "dotnet",
         "args": [
            "test",
            "--no-restore",
            "--no-build",
            "--verbosity",
            "q"
         ]
      }
   ]
}